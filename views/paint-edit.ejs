<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <title>PixelDraw</title>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
  <header>
    <h1 class="logo">Pixel<span class="secondary-color">Draw</span></h1>
    <ul class="nav">
      <li class="nav-item">
        <p class="nav-btn" id="save"><i class="fa fa-save"></i></p>
      </li>
      <li class="nav-item">
        <a href="/" class="nav-btn" id="new"><i class="fa fa-plus-square"></i></a>
      </li>
    </ul>
  </header>
  <main>
    <section class="canvas-section">
      <div class="canvas">
        <% for(let i = 0; i < 32; i++) { %>
          <% for(let j = 0; j < 32; j++) { %> 
            <div class="pixel-cell" id="px-<%=i%>-<%=j%>"
              data-row="<%=i%>" data-col="<%=j%>"></div>
          <% } %> 
        <% } %>
      </div>
    </section>
    <aside class="toolkit">
      <label for="select-color" id="select-color-label"><i class="fa fa-pencil"></i></label>
      <input type="color" id="select-color">
      <p id="eraser-label"><i class="fa fa-eraser"></i></p>
    </aside>
  </main>

  <!-- Save Painting modal -->
  <div class="save-modal" id="modal">
    <div class="modal-header">
      <div class="modal-title">Save Painting</div>
      <button class="close-button">&times;</button>
    </div>
    <div class="modal-body">
      <form action="/" class="save-painting-form">
        <div class="form-row">
          <label for="painting-title-input">Title of Painting:</label>
          <input type="text" id="painting-title-input">
        </div>
        <div class="form-row">
          <label for="painting-author-input">Author of Painting:</label>
          <input type="text" id="painting-author-input">
        </div>
        <button class="form-button">Save!</button>
      </form>
    </div>
  </div>
  <div class="overlay"></div>

  <script src="/app.js"></script>
</body>

</html>